# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.exe binary
*.dll binary
